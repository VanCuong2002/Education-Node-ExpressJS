<div class="container mt-4">
    <div class="row">
        <div
            id="carouselExampleCaptions"
            class="carousel slide container"
            data-bs-ride="carousel"
            data-bs-interval="5000"
        >
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img
                        src="https://tuhoclaptrinh.edu.vn/upload/post/2022/06/08/khoa-hoc-html-va-css-co-ban-20220608151723-480219.png"
                        alt="html-css"
                    />
                </div>
                <div class="carousel-item">
                    <img
                        src="https://tenten.vn/tin-tuc/wp-content/uploads/2022/06/giai-dap-nhung-cau-hoi-ve-javascript-4.jpeg"
                        class="d-block w-100"
                        alt="js"
                    />
                </div>
                <div class="carousel-item">
                    <img
                        src="https://files.fullstack.edu.vn/f8-prod/courses/13/13.png"
                        class="d-block w-100"
                        alt="reactjs"
                    />
                </div>
            </div>

            <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev"
            >
                <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next"
            >
                <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="row">
        <h2 class="heading">Khóa học miễn phí</h2>
        {{#each courses}}
            <div class="col-sm-6 col-md-4 col-lg-3 mt-2">
                <div class="card mb-4">
                    <a href="/courses/{{this.slug}}">
                        <img
                            src="{{this.image}}"
                            class="card-img-top"
                            alt="{{this.name}}"
                        />
                    </a>

                    <div class="card-body">
                        <h5 class="card-title text-info">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/courses/{{this.slug}}">
                            <button class="btn btn-primary">Học ngay</button>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>